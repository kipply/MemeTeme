  body
    .demo-layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
      header.demo-header.mdl-layout__header.mdl-color--grey-100.mdl-color-text--grey-600
        .mdl-layout__header-row
          span.mdl-layout-title MEMEMEMEEMEMMEMEMEE
      .demo-drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-color-text--blue-grey-50
        header.demo-drawer-header
            img(src='title.svg')
            .mdl-layout-spacer
            button#accbtn.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon
              span.visuallyhidden Accounts
        nav.demo-navigation.mdl-navigation.mdl-color--blue-grey-800
          a.mdl-navigation__link(href='/profile')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') inbox
            | Profile
          a.mdl-navigation__link(href='/memerdex')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') people
            | MEMEerDEX
          a.mdl-navigation__link(href='/trade')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') people
            | tRADe
          a.mdl-navigation__link(href='/logout')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') flag
            | 
          .mdl-layout-spacer
          a.mdl-navigation__link(href='')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') help_outline
            span.visuallyhidden Help
      main.mdl-layout__content.mdl-color--grey-100
        .hover1
          nav.container1
            a.buttons(tooltip='plaaaaaaaaayyy', href='/play')
        style.
          .mdl-layout__content{
            padding: 10px;
          }
          .demo-card-wide.mdl-card {
          position: relative;
          padding: 5px;
          margin: 30px;
          width: 95%;
          color: black;
          }

          .mdl-card__supporting-text{
          color: black!important;
          }
          .demo-card-wide > .mdl-card__menu {
            display: none;
          }
          .mdl-card__title{
            color: darkgrey!important;
          }
          .mdl-button--red{
          color: #F44336;
          }
          p{
          color: black;
          }

        .demo-card-wide.mdl-card.mdl-shadow--2dp
          .mdl-card__title
            h2.mdl-card__title-text
              if (user.facebook.token)
                span=" " + user.facebook.name
              else if (user.google.token)
                span=user.google.name
              else
                span=user.local.email
          .mdl-card__supporting-text
            each meme in memes
              p=meme.name
              p="RARITY: " + meme.rarity
              img(src="" + meme.image, style = "width: 200px;   ")
              
          .mdl-card__actions.mdl-card--border
            if (!user.facebook.token)
              a.mdl-button.mdl-js-button.mdl-button--primary(href='/connect/facebook') CONNeCt gOoGLe
            if (!user.google.token)
              a.mdl-button.mdl-js-button.mdl-button--red(href='/connect/google') coNneCT GOOgLe